<?xml version="1.0" encoding="UTF-8"?>
<?import java.net.*?>

<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<VBox prefWidth="300" alignment="CENTER" prefHeight="300" spacing="10" fx:controller="Controller" xmlns:fx="https:/javafx.com/fxml">
    <fx:define>
        <Font fx:id="FONT" size="18"></Font>
    </fx:define>
    <StackPane alignment="CENTER">
        <Rectangle fill="TRANSPARENT" stroke="GRAY" width="230" height="150"  />
        <Text fx:id="output" font="$FONT"></Text>
    </StackPane>
    <HBox alignment="CENTER" spacing ="10">
        <Button text="7" prefWidth="50" font="$FONT" onAction="#processNumpad"></Button>
        <Button text="8" prefWidth="50" font="$FONT" onAction="#processNumpad"></Button>
        <Button text="9" prefWidth="50" font="$FONT" onAction="#processNumpad"> </Button>
        <Button text="/" prefWidth="50" font="$FONT" onAction="#processOperator"> </Button>
    </HBox>
    <HBox alignment="CENTER" spacing ="10">
        <Button text="4" prefWidth="50" font="$FONT" onAction="#processNumpad"></Button>
        <Button text="5" prefWidth="50" font="$FONT" onAction="#processNumpad"></Button>
        <Button text="6" prefWidth="50" font="$FONT" onAction="#processNumpad"> </Button>
        <Button text="*" prefWidth="50" font="$FONT" onAction="#processOperator"> </Button>
    </HBox>
    <HBox alignment="CENTER" spacing ="10">
        <Button text="1" prefWidth="50" font="$FONT" onAction="#processNumpad"></Button>
        <Button text="2" prefWidth="50" font="$FONT" onAction="#processNumpad"></Button>
        <Button text="3" prefWidth="50" font="$FONT" onAction="#processNumpad"> </Button>
        <Button text="-" prefWidth="50" font="$FONT" onAction="#processOperator"> </Button>
    </HBox>
    <HBox alignment="CENTER" spacing ="10">
        <Button text="0" prefWidth="110" font="$FONT" onAction="#processNumpad"></Button>
        <Button text="=" prefWidth="50" font="$FONT" onAction="#processOperator"></Button>
        <Button text="+" prefWidth="50" font="$FONT" onAction="#processOperator"> </Button>

    </HBox>
</VBox>